conky.config = {
    alignment =  'middle_right',
    maximum_width = 400,
    border_width = 0,
    gap_x = 20,
    gap_y = 0,
 
    own_window = true,
    own_window_class = 'Conky',
    own_window_type =  'override',
        own_window_transparent = true,
 
    double_buffer = yes,
    background = true,
    use_xft = true,
    xftalpha = 0,
    update_interval = 1.0,
    total_run_times = 0,
    double_buffer = true,
    draw_shades = true,
    draw_outline = true,
    draw_borders = false,
    draw_graph_borders = true,
    no_buffers = true,
    cpu_avg_samples = 2,
    override_utf8_locale = true,
    use_spacer =  'right'
}
 
conky.text = [[
${font Terminus:size=14}$nodename ${hr 2} ${alignr}${font}
 
${offset 20}Kernel:$alignr${kernel}
 
${font Terminus:size=12}CPU ${hr 2} ${alignr}${font}
 
${offset 20}Average (${cpu cpu0}%)
${offset 20}${cpugraph cpu0}
 
${offset 20}Core 1 (${cpu cpu1}%) 
${offset 20}${cpugraph cpu1}
${offset 20}Core 2 (${cpu cpu2}%) 
${offset 20}${cpugraph cpu2 }
${offset 20}Core 3 (${cpu cpu3}%) 
${offset 20}${cpugraph cpu3}
${offset 20}Core 4 (${cpu cpu4}%) 
${offset 20}${cpugraph cpu4}

${font Terminus:size=12}RAM ${hr 2} ${alignr}${font}
 
${offset 20}$mem / $memmax $alignr $memperc%
${offset 20}$membar

${font Terminus:size=12}Storage ${hr 2} ${alignr}${font}
 
${offset 20}/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${offset 20}${fs_bar /}

${offset 20}Linux-HDD-Data $alignc ${fs_used /home/simon/MediaLink/Linux-HDD-Data} / ${fs_size /home/simon/MediaLink/Linux-HDD-Data} $alignr ${fs_used_perc /home/simon/MediaLink/Linux-HDD-Data}%
${offset 20}${fs_bar /home/simon/MediaLink/Linux-HDD-Data/}

${font Terminus:size=12}Network ${hr 2} ${alignr}${font}

${offset 20}Download speed: ${downspeed enp6s0}
${offset 20}${downspeedgraph enp6s0}

${offset 20}Upload speed: ${upspeed enp6s0}
${offset 20}${upspeedgraph enp6s0}
]]
